<div class="bus-route--tileitem m-align-left">
  <div class="bus-route--tileitem-route m-large m-align-left">
    <h1><%= routeNumber.replace(/ [a-zA-Z]*$/g, "") %></h1>
  </div>
  <div class="bus-route--tileitem-wait m-small m-align-right">
    <ul class="bus-route--waittimes">
      <!--TODO: Remove logic from template-->
      <% for(var i=0; i < Math.min(3, routeTrips.length); i++) {%>
        <% if (routeTrips[i].tripWaitTime == "DUE") {%>
          <li class="bus-route--waittimes-item b-red"><h2><%= routeTrips[i].tripWaitTime %></h2></li>
        <% } else if ( i != 0 && routeTrips[i].tripWaitTime > 0 && routeTrips[i].tripWaitSource === "Realtime") {%>
          <li class="bus-route--waittimes-item b-blue"><h2><%= routeTrips[i].tripWaitTime %></h2></li>
        <% } else if ( i != 0 && routeTrips[i].tripWaitTime > 0 && routeTrips[i].tripWaitSource === "Scheduled") {%>
          <li class="bus-route--waittimes-item b-grey"><h2><%= routeTrips[i].tripWaitTime %></h2></li>
        <% }else if (i == 0){%>
          <li class="bus-route--waittimes-item"><h2><%= routeTrips[i].tripWaitTime %></h2></li>
        <% } %>
      <% } %>
    </ul>
  </div>
  <div class="bus-route--tileitem-name m-large m-align-left">
    <h3><%= routeTrips[0].tripHeadSign.toLowerCase() %></h3>
  </div>
</div>

